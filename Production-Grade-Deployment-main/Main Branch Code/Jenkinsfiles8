pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
    }

    environment {
        APP_NAME  = "multibranch-flask-app"
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "=== Checkout Source Code ==="
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "=== Build Docker Image ==="
                dir('Production-Grade-Deployment-main/Main Branch Code') {
                    sh '''
                        set -e
                        docker build -t ${APP_NAME}:${IMAGE_TAG} .
                    '''
                }
            }
        }

        stage('Login, Tag & Push') {
            steps {
                echo "=== Docker Login, Tag & Push ==="
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        set -e
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

                        docker tag ${APP_NAME}:${IMAGE_TAG} \
                          $DOCKER_USER/${APP_NAME}:${IMAGE_TAG}

                        docker push $DOCKER_USER/${APP_NAME}:${IMAGE_TAG}

                        docker logout
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "=== Deploy to Kubernetes ==="
                withCredentials([file(credentialsId: 'kubeconfig-creds', variable: 'KUBECONFIG')]) {
                    sh '''
                        set -e
                        kubectl set image deployment/flask-app \
                          flask-app=$DOCKER_USER/${APP_NAME}:${IMAGE_TAG} \
                          --namespace=default

                        kubectl rollout status deployment/flask-app --namespace=default
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "üöÄ Pipeline completed successfully"
        }
        failure {
            echo "‚ùå Pipeline failed"
        }
    }
}
