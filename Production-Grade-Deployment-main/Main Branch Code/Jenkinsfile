pipeline {
    agent any

    environment {
        APP_NAME  = "multibranch-flask-app"
        IMAGE_TAG = "latest"
        REPO_URL  = "https://github.com/adaleShri/multibranch-microservices-deployment.git"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "=== Checkout Source Code from GitHub ==="
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "=== Build Docker Image ==="
                dir('Production-Grade-Deployment-main/Main Branch Code') {
                    sh '''
                        set -e
                        docker build -t ${APP_NAME}:${IMAGE_TAG} .
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "=== Push Docker Image to Docker Hub ==="
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        set -e
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker tag ${APP_NAME}:${IMAGE_TAG} $DOCKER_USER/${APP_NAME}:${IMAGE_TAG}
                        docker push $DOCKER_USER/${APP_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

        stage('Deploy k8s') {
            steps {
                echo "=== Deploying to Kubernetes ==="
                dir('Production-Grade-Deployment-main/Main Branch Code/k8s') {
                    sh '''
                        set -e
                        kubectl apply -f deployment.yml
                        kubectl apply -f service.yml
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "üöÄ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
